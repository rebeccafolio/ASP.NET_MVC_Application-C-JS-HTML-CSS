@model IEnumerable<ITP245_Model.Spoilage>

@{
    ViewBag.Title = "Spoilage";
    Layout = "~/Areas/Inventory/Views/Shared/_Admin.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Spoilage", "Create", null, null, new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReasonType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpoilageDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReasonType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpoilageDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink(item.Item.Name, "Details", "Items", new { area = "Inventory", id = item.ItemId }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SpoilageId }, new { @class = "badge bg-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.SpoilageId }, new { @class = "badge bg-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.SpoilageId }, new { @class = "badge bg-danger" })
        </td>
    </tr>
}

</table>
